    .upper-section h2 {
        font-size: xx-large;
        font-weight: bolder;
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(to right, #06348E 0%, #9B099E 20%, #6F0028 70%);
        -webkit-background-clip: text;
        color: transparent;
    }

    @@media screen and (min-width: 600px) {
        .flex-container {
