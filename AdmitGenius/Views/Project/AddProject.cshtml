        height: 100%;
    }

    .continue {
        border: 1px solid rgb(173, 173, 173);
        padding: 0.5rem;
        width: 30vw;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 8px;
        margin-top: 8px;
