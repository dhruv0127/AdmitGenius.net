        <h2 class="mt-6">ADD Project Details</h2>
    </div>


    <form asp-action="AddProject" method="post" enctype="multipart/form-data">

        <p>@ViewBag.sucess</p>

        <div class="form-group">
            <input class="text-input" asp-for="ProjectName" class="form-control" placeholder="Project Name" required>
        </div>
        <div class="form-group">
            <input class="text-input" asp-for="ProjectDescription" class="form-control" placeholder="Project Description" required>
        </div>


        <div class="form-group">
            <input class="text-input" asp-for="GithubRepoUrl" class="form-control" placeholder="Github Repository URL">
        </div>


        <button type="submit" class="btn btn-primary submitbtn">Add Project</button>
    </form>

</div>