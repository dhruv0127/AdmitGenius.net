                        <input type="number" class="text-input" asp-for="LetterofAcceptanceJtoA" class="form-control" placeholder="Januray to April">
                    </div>
                    <div class="form-group">
                        <input type="number" class="text-input" asp-for="LetterofAcceptanceMtoA" class="form-control" placeholder="May to August">
                    </div>
