                    <p>@ViewBag.sucess</p>

                    <div class="form-group">
                        <input class="text-input" asp-for="UniversityName" class="form-control" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input class="text-input" asp-for="UniversityTagline" class="form-control" placeholder="Tagline">
