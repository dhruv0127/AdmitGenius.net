@model AdmitGenius.Models.ViewModels.AddCoursesViewModel

<style>

    .dashboard {
        height: 70%;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        gap: 0;
    }

    .dashboard-links {
        padding-top: 30px;
        width: 30rem;
        height: 100vh;
        background-color: #EFF3F7;
        position: fixed;
        top: 0;
        left: 0;
    }

        .dashboard-links ul {
            padding-inline-start: 0;
            list-style-type: none;
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-self: center;
        }

            .dashboard-links ul li svg {
                margin-right: 1rem;
            }

        .dashboard-links li {
            width: 80%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: row;
            text-decoration: none;
            font-weight: bolder;
            padding: 1.5rem;
            margin: 1rem;
            max-width: inherit;
        }

            .dashboard-links li:nth-child(3) {
                border-bottom: none;
            }

            .dashboard-links li :hover {
                color: rgb(5, 5, 204);
                cursor: pointer;
            }

            .dashboard-links li a {
                text-decoration: none;
                color: darkblue;
            }

                .dashboard-links li a :active {
                    color: purple;
                }

    #dashboard-content {
        margin-left: 30rem;
        width: 70%;
    }

    .customcontainer {
        margin-left: 2rem;
        margin-top: 4rem;
        display: flex;
        height: inherit;
        flex-direction: column;
        align-items: center;
        justify-self: flex-start;
        justify-content: center;
    }

    .heading h2 {
        color: darkblue;
        font-family: 'roboto',sans-serif;
    }

    .content {
        height: max-content;
        width: 60vw;
    }

    form {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 1rem auto;
    }

    input, textarea,select {
        width: 45vw;
        padding: 0.5rem;
        margin-bottom: 2rem;
        border-radius: 4px;
        border: 1px solid #979797;
        box-sizing: border-box;
    }

        input::placeholder, textarea::placeholder {
            color: black;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
            font-size: 1rem;
        }

    .submitbtn {
        margin: 0.5rem;
        padding: 1rem;
        background-color: orange;
        border-radius: 5rem;
        width: 15rem;
        color: #fff;
        border: none;
        cursor: pointer;
        align-self: center;
        font-weight: bolder;
    }

        .submitbtn:hover {
            background-color: orangered;
            cursor: pointer;
        }

</style>

<section class="dashboard">
    <div class="dashboard-links">
        <ul>
            <li>
                <svg width="29" height="29" viewBox="0 0 29 29" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.9818 5.99479L19.9766 2L26.9674 8.99088L22.9726 12.9856M15.9818 5.99479L2.41367 19.5629C2.14881 19.8277 2 20.187 2 20.5616V26.9674H8.40584C8.78043 26.9674 9.13967 26.8186 9.40454 26.5537L22.9726 12.9856M15.9818 5.99479L22.9726 12.9856" stroke="black" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <a asp-action="EditUniversityDetails" asp-controller="University">EDIT UNIVERSITY DETAILS</a>
            </li>
            <div style="height:1px ; background-color:darkblue;width: 80%"></div>
            <li>
                <svg width="29" height="27" viewBox="0 0 29 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10.2342 9.16996L13.4811 2.6297C13.8979 1.7901 15.1021 1.7901 15.5189 2.6297L18.7657 9.16996L26.0269 10.2252C26.9585 10.3606 27.3297 11.4992 26.6554 12.1524L21.4021 17.2397L22.6419 24.4267C22.8011 25.3497 21.8267 26.0535 20.9931 25.6176L14.5 22.2225L8.00684 25.6176C7.17325 26.0535 6.19886 25.3497 6.35806 24.4267L7.59781 17.2397L2.34469 12.1524C1.67021 11.4992 2.04153 10.3606 2.97315 10.2252L10.2342 9.16996Z" stroke="black" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <a asp-action="AddNewCourses" asp-controller="University">ADD NEW COURSES</a>
            </li>
            <div style="height:1px ; background-color:darkblue;width: 80%"></div>
            <li>
                <svg width="29" height="32" viewBox="0 0 29 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2 30.5714V28.7857C2 21.8821 7.59645 16.2857 14.5 16.2857C21.4036 16.2857 27 21.8821 27 28.7857V30.5714" stroke="black" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M14.5003 16.2857C18.4451 16.2857 21.6431 13.0877 21.6431 9.14286C21.6431 5.19796 18.4451 2 14.5003 2C10.5554 2 7.35742 5.19796 7.35742 9.14286C7.35742 13.0877 10.5554 16.2857 14.5003 16.2857Z" stroke="black" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <a asp-action="ReviewStudents" asp-controller="University">REVIEW STUDENTS</a>
            </li>
            <div style="height:1px ; background-color:darkblue;width: 80%"></div>
            <li>
                <svg width="29" height="32" viewBox="0 0 29 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2 30.5714V28.7857C2 21.8821 7.59645 16.2857 14.5 16.2857C21.4036 16.2857 27 21.8821 27 28.7857V30.5714" stroke="black" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M14.5003 16.2857C18.4451 16.2857 21.6431 13.0877 21.6431 9.14286C21.6431 5.19796 18.4451 2 14.5003 2C10.5554 2 7.35742 5.19796 7.35742 9.14286C7.35742 13.0877 10.5554 16.2857 14.5003 16.2857Z" stroke="black" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <a asp-action="ApprovedStudents" asp-controller="University">APPROVED STUDENTS</a>
            </li>
        </ul>
    </div>
    <div id="dashboard-content">
        <div class="customcontainer">
            <div class="heading"><h2><strong>ADD NEW COURSE</strong></h2></div>
            <div class="content">

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="UniversityId" />

                    <label asp-for="CourseName">Course Name</label>
                    <input asp-for="CourseName" placeholder="Enter course name" required>

                    <label asp-for="CourseDescription">Course Description</label>
                    <textarea asp-for="CourseDescription" placeholder="Enter course description" required></textarea>

                    <label asp-for="CourseDepartment">Course Department</label>
                    <input asp-for="CourseDepartment" placeholder="Course Department" required>

                    <label asp-for="CourseImage">Course Image</label>
                    <input asp-for="CourseImage" type="file" required>

                    <label asp-for="CourseDuration">Course Duration (in Year)</label>
                    <input type="number" asp-for="CourseDuration" placeholder="Enter course duration" required>

                    <label asp-for="CourseSemesters">Course Semesters</label>
                    <input type="number" asp-for="CourseSemesters" placeholder="Enter course semesters" required>

                    <label asp-for="CourseFees">Course Fees</label>
                    <input type="number" asp-for="CourseFees" placeholder="Enter course fees" required>

                    <label asp-for="ApplicationFee">Application Fee</label>
                    <input type="number" asp-for="ApplicationFee" placeholder="Enter application fee" required>

                    <label asp-for="CostOFLiving">Cost of Living</label>
                    <input type="number" asp-for="CostOFLiving" placeholder="Enter cost of living" required>

                    <label asp-for="CourseEducationLevel">Course Education Level</label>
                    <select asp-for="CourseEducationLevel" asp-items="new SelectList(Model.EducationLevels)">
                        <option value="">Select</option>
                    </select>

                    <label asp-for="CourseMinimumRequirements">Course Minimum Requirements</label>
                    <select asp-for="CourseMinimumRequirements" asp-items="new SelectList(Model.MinimumRequirements)">
                        <option value="">Select</option>
                    </select>

                    <label asp-for="CourseLanguage">Course Language</label>
                    <select asp-for="CourseLanguage" asp-items="new SelectList(Model.Languages)">
                        <option value="">Select</option>
                    </select>
                    

                    <label asp-for="MinimumRequirementsUS">Minimum Grade Requirements US/Canada System ( A, B, C, D, F )</label>
                    <input type="text" asp-for="MinimumRequirementsUS" placeholder="Enter minimum requirements for US" required>

                    <label asp-for="MinimumRequirementsUK">Minimum Grade Requirements  UK System ( A*, A, B, C, D, E, U )</label>
                    <input type="text" asp-for="MinimumRequirementsUK" placeholder="Enter minimum requirements for UK" required>

                    <label asp-for="MinimumRequirementsGermany">Minimum Grade Requirements Germany System (1 , 2 , 3 , 4 , 5  )</label>
                    <input type="number" asp-for="MinimumRequirementsGermany" placeholder="Enter minimum requirements for Germany" required>

                    <label asp-for="MinimumRequirementsFrance">Minimum Grade Requirements France System (0 , 1 , 2 , ... , 20 )</label>
                    <input type="number" asp-for="MinimumRequirementsFrance" placeholder="Enter minimum requirements for France" required>

                    <label asp-for="MinimumRequirementsJapan">Minimum Grade Requirements Japan System ( 0 , 1 ,2 , ... , 100 )</label>
                    <input type="number" asp-for="MinimumRequirementsJapan" placeholder="Enter minimum requirements for Japan" required>

                    <label asp-for="MinimumRequirementsOther">Minimum Grade Requirements Other System ( CGPA 0 , 1 , 2 , ... , 10)</label>
                    <input type="number" asp-for="MinimumRequirementsOther" placeholder="Enter minimum requirements for Other" required>

                    <label asp-for="WhatWillYouLearn">What Will You Learn</label>
                    <input asp-for="WhatWillYouLearn" placeholder="Enter what students will learn" required>

                    

                    <label asp-for="IELTS">IELTS</label>
                    <input type="number" asp-for="IELTS" placeholder="Enter IELTS score" required>

                    <label asp-for="TOFEL">TOEFL</label>
                    <input type="number" asp-for="TOFEL" placeholder="Enter TOEFL score" required>

                    <label asp-for="PTE">PTE</label>
                    <input type="number" asp-for="PTE" placeholder="Enter PTE score" required>

                    <label asp-for="ACT">ACT</label>
                    <input type="number" asp-for="ACT" placeholder="Enter ACT score">

                    <label asp-for="SAT">SAT</label>
                    <input type="number" asp-for="SAT" placeholder="Enter SAT score">

                    <label asp-for="GRE">GRE</label>
                    <input type="number" asp-for="GRE" placeholder="Enter GRE score">

                    <label asp-for="CourseEnrollDeadlineIntake1">Enrollment Deadline Intake 1</label>
                    <input type="date" asp-for="CourseEnrollDeadlineIntake1" required>

                    <label asp-for="CourseStartingDateIntake1">Starting Date Intake 1</label>
                    <input type="date" asp-for="CourseStartingDateIntake1" required>

                    <label asp-for="CourseEnrollDeadlineIntake2">Enrollment Deadline Intake 2</label>
                    <input type="date" asp-for="CourseEnrollDeadlineIntake2">

                    <label asp-for="CourseStartingDateIntake2">Starting Date Intake 2</label>
                    <input type="date" asp-for="CourseStartingDateIntake2">

                    <label asp-for="CourseEnrollDeadlineIntake3">Enrollment Deadline Intake 3</label>
                    <input type="date" asp-for="CourseEnrollDeadlineIntake3">

                    <label asp-for="CourseStartingDateIntake3">Starting Date Intake 3</label>
                    <input type="date" asp-for="CourseStartingDateIntake3">

                    <label asp-for="Hashtags">Enter hashtags separated by commas</label>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Hashtags, new { @class = "form-control", placeholder = "eg. CSE, Computer science" })
                        @Html.ValidationMessageFor(model => model.Hashtags, "", new { @class = "text-danger" })
                    </div>  

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>

    </div>
</section>
