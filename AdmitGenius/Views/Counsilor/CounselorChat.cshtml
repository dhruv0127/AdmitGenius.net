        var formData = new FormData();
        formData.append("file", file);

        console.log(currentGroup);

        $.ajax({
            url: '/Community/UploadImageToS3',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (s3Url) {
                connection.invoke("SendImageToGroup", currentGroup, s3Url).catch(function (err) {
