<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-2xl font-semibold text-center text-gray-800 capitalize lg:text-3xl dark:text-white">Our <span class="text-blue-500">Executive Counselors</span></h1>

        <p class="max-w-2xl mx-auto my-6 text-center text-gray-500 dark:text-gray-300">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo incidunt ex placeat modi magni quia error alias, adipisci rem similique, at omnis eligendi optio eos harum.
        </p>

        <div class="grid grid-cols-1 gap-8 mt-8 xl:mt-16 md:grid-cols-2 xl:grid-cols-2">
            @foreach (var counselor in Model)
            {


                <div class="px-12 py-8 transition-colors duration-300 transform border cursor-pointer rounded-xl hover:border-transparent group hover:bg-blue-600 dark:border-gray-700 dark:hover:border-transparent">
                    <a asp-action="CounsilorPage" asp-controller="Counsilor" asp-route-CounselorId="@counselor.CounselorId">

                        <div class="flex flex-col sm:-mx-4 sm:flex-row">
                            <img class="flex-shrink-0 object-cover w-24 h-24 rounded-full sm:mx-4 ring-4 ring-gray-300" src="@counselor.CounselorProfilePicture" alt="">

                            <div class="mt-4 sm:mx-4 sm:mt-0">
                                <p class="text-xl font-semibold text-gray-700 capitalize md:text-2xl dark:text-white group-hover:text-white">@counselor.CounselorFirstName @counselor.CounselorLastName</p>

                                <p class="mt-2 text-gray-500 capitalize dark:text-gray-300 group-hover:text-gray-300">Did <span style="color:#57acff"> @counselor.CounselorDegree</span> from @counselor.CounselorUniversity in @counselor.CounselorGraduationYear</p>
                                <p class="text-gray-500 capitalize dark:text-gray-300 group-hover:text-gray-300">Students Assisted  : @counselor.TotalPlacedStudent</p>
                            </div>
                        </div>

                        <p class="mt-4 text-gray-500 capitalize dark:text-gray-300 group-hover:text-gray-300">@counselor.CounselorBio</p>

                    </a>
                    <div class="flex mt-4 -mx-2">
