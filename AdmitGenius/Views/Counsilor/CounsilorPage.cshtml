                <!-- Profile Card -->
                <div class="bg-white p-3 border-t-4 border-green-400">
                    <div class="image overflow-hidden">
                        <img class="h-auto w-full mx-auto"
                             src="@Model.CounselorProfilePicture"
                             alt="">
                    </div>
                    <div style="display:flex;justify-content: space-between;align-items: flex-start;flex-direction: column;">
                        <h1 class="text-gray-900 font-bold text-xl leading-8 my-1">@Model.CounselorFirstName @Model.CounselorLastName</h1>
