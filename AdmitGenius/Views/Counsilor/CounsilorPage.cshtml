                        @{
                            var userId = Context.Session.GetString("UserId");
                        }

                        @if (Model.CounselorId.ToString() != userId)
                        {
                            <div style="display: flex;width:100%;justify-content: space-between;">

                                <a style="margin-left:0" href="https://topmate.io/dhruvparekh?utm_source=topmate&utm_medium=popup&utm_campaign=Page_Ready" class="btn-grad px-3 py-2 text-sm font-medium text-center inline-flex items-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                    <p style="margin-left:5px">Book a Meeting</p>
                                </a>


                                @if (ViewBag.IsCounselorPaid == false)
                                {

                                    <form asp-action="AddSubscription" asp-controller="Counsilor" asp-route-cid="@Model.CounselorId">

                                        <button type="submit" class="btn-grad px-3 py-2 text-sm font-medium text-center inline-flex items-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                            <svg class="w-3 h-3 text-white me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                                                <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z" />
                                                <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z" />
                                            </svg>
                                            Pay
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="CounselorChat" asp-controller="Counsilor" asp-route-cid="@Model.CounselorId">

                                        <button type="submit" class="btn-grad px-3 py-2 text-sm font-medium text-center inline-flex items-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                            <svg class="w-3 h-3 text-white me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                                                <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z" />
                                                <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z" />
                                            </svg>
                                            Message
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                    <h3 class="text-gray-600 font-lg text-semibold leading-6">Current Company : @Model.CurrentComapny</h3>
                    <p class="text-sm text-gray-500 hover:text-gray-600 leading-6">
                        @Model.CounselorBio
                    </p>
                    <ul class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">
                        <li class="flex items-center py-3">
                            <span>Status</span>
                            <span class="ml-auto">
                                <span class="bg-green-500 py-1 px-2 rounded text-white text-sm">Active</span>
                            </span>
                        </li>
                        <li class="flex items-center py-3">
                            <span>Available</span>
                            <span class="ml-auto">@Model.WorkingHours</span>
                        </li>
                    </ul>
                </div>
                <!-- End of profile card -->
                <div class="my-4"></div>
                <!-- Friends card -->
                @* <div class="bg-white p-3 hover:shadow">
                <div class="flex items-center space-x-3 font-semibold text-gray-900 text-xl leading-8">
