            <style>
                .profile-container {
                    padding: 20px;
                    background-color: #ffffff;
                    border-radius: 20px;
                    display: flex;
                    border: 1px solid #0000003b;
                }

                .profile-info {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    margin-right: 30px;
                }

                .profile-image {
                    height: 100px;
                    border-radius: 50px;
                    margin-bottom: 20px;
                }

                .profile-details {
                    width: 35vh;
                }

                i {
                    margin-right: 8px;
                    color: #03035e;
                }

                .job-details-container {
                    display: flex;
                    padding: 20px;
                    border-radius: 13px;
                    background-color: #dcdcdc73;
                    flex-direction: column;
                    flex-grow: 1;
                }

                .job-header {
                    display: flex;
                    gap: 30px;
                    align-items: center;
                }

                .job-title {
                    font-size: larger;
                    font-weight: 600;
                }

                .job-type {
                    background: rgba( 69, 58, 232, 0.45 );
                    box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
                    backdrop-filter: blur( 20px );
                    -webkit-backdrop-filter: blur( 20px );
                    border-radius: 10px;
                    border: 1px solid rgba( 255, 255, 255, 0.18 );
                    color: #3b00bc;
                }

                .job-description {
                    margin-bottom: 20px;
                }

                .salary {
                    font-weight: bold;
                }

                .posted-time {
                    margin-bottom: 20px;
                }

                .action-buttons {
                    display: flex;
                    justify-content: flex-end;
                    gap: 20px;
                }

                .action-button {
                    padding: 8px;
                    background-color: #4caf50;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                }
            </style>

            <div style="display:flex;flex-direction: column;gap: 20px;padding-right: 20px;    width: 100%;">
                @foreach (var enr in Model)
                {
                    <div class="profile-container">
                        <div class="profile-info">
                            <img src="https://yourbucketname.s3.amazonaws.com/dummyprofile.jpg" class="profile-image">
                            <div class="profile-details">
                                <a asp-action="Resume" asp-controller="StudentProfile" asp-route-userId="@enr.User.UserId"><i class="fas fa-user"></i>@enr.User.UserName</a>
                                <p><i class="fas fa-envelope"></i>@enr.User.UserEmail</p>
                                <p><i class="fas fa-phone"></i>@enr.User.UserPhone</p>
                                <p><i class="fas fa-map-marker-alt"></i>@enr.User.UserCountry</p>

                                @if(@enr.User.resumePrefrence == "pdf"){

                                    <a href="@enr.User.resumeFileString"><i class="fas fa-file-alt"></i>View Resume</a>
                                }else{

                                    <a asp-action="Resume" asp-controller="StudentProfile" asp-route-userId="@enr.User.UserId"><i class="fas fa-file-alt"></i>View Resume</a>
                                }
                            </div>
                        </div>
                        <div class="job-details-container">
                            <div class="job-header">
                                <a asp-action="JobDescription" asp-controller="Company" asp-route-JobId="@enr.Job.JobId" class="job-title"><i class="fas fa-briefcase"></i>@enr.Job.JobName</a>
                                <span class="job-type bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400">@enr.Job.JobEmployeeType</span>
                            </div>
                            <p class="job-description">@enr.Job.JobDescription</p>
                            <p class="salary"><i class="fas fa-dollar-sign"></i>Salary : @enr.Job.JobMinSalary - @enr.Job.JobMaxSalary</p>
                            <p><i class="far fa-clock"></i>@enr.Job.JobPostedTime</p>
                            <div class="action-buttons">
                                <form asp-controller="Company" asp-action="AcceptEnrollment" asp-route-enrollmentId="@enr.IrID" method="post">
                                    <button type="submit" class="action-button"><i class="fas fa-check"></i>Approve</button>
                                </form>

                                <form asp-controller="Company" asp-action="RejectEnrollment" asp-route-enrollmentId="@enr.IrID" method="post">
                                    <button type="submit" class="action-button"><i class="fas fa-times"></i>Reject</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

