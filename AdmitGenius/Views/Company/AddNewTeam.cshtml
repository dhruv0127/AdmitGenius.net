                </li>
            </ul>
        </div>
    </div>

    <style>
        .form-group {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        label {
            padding-left: 10px;
        }

        .formbg {
            background-image: linear-gradient( 174.2deg, rgb(228 228 255 / 51%) 7.1%, rgba(240,246,238,1) 67.4% );
            width: 100%;
            padding: 3% 12%;
            margin-right: 1%;
            border-radius: 20px
        }

        form {
            padding: 0.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-control {
            width: 30vw;
            margin-bottom: 2rem;
            border: 1px solid #4d20f7;
            border-radius: 30px;
            padding: 10px 10px 10px 15px;
            width: 100%;
        }

        input::placeholder,
        textarea::placeholder {
            color: black;
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
            font-size: 1rem;
        }

        .submitbtn {
            margin: 0.5rem;
            padding: 1rem;
            background-color: #003254;
            border-radius: 5rem;
            width: 100%;
            color: #fff;
            border: none;
            cursor: pointer;
            align-self: center;
            font-weight: bold;
            margin-top: 15px;
        }

            .submitbtn:hover {
                background-color: #2E2E2E;
                cursor: pointer;
            }

        .upper-section h2 {
            font-size: xx-large;
            font-weight: bolder;
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(to right, #06348E 0%, #9B099E 20%, #6F0028 70%);
            -webkit-background-clip: text;
            color: transparent;
        }
    </style>



    <div style="display:flex;flex-direction: column;align-items: center;width: 100%;" class="p-4 ">
      
        <form class="formbg" asp-action="AddNewTeam" method="post" enctype="multipart/form-data">

            <div style="margin-bottom: 30px;" class="upper-section">
                <h2 class="mt-6">Add Team Details</h2>
            </div>

            <p>@ViewBag.sucess</p>

            <div class="form-group">
                <input asp-for="TeamName" class="form-control" placeholder="Name">
            </div>
            <div class="form-group">
                <input asp-for="TeamPost" class="form-control" placeholder="Post">
            </div>

            <div class="form-group">
                <input asp-for="TeamProfile" type="file" class="form-control" placeholder="Description">
            </div>

            <button type="submit" class="btn btn-primary submitbtn">Add Team</button>
        </form>

    </div>
</div>